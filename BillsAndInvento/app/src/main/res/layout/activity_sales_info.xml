<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalesInfo">

    <ImageView
        android:id="@+id/additembackground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundfive"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bill" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/raleway_semibold_italic"
        android:text="BILLING DETAILS"
        android:textColor="#60605F"
        android:textSize="3.5mm"
        android:textStyle="bold" />

    <View
        android:id="@+id/login_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="?android:attr/listDivider"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20mm"
        android:layout_marginLeft="7mm"
        android:layout_marginRight="5mm"
        android:backgroundTint="@android:color/transparent"
        android:background="@drawable/rounded_background"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="5mm"
            android:layout_marginLeft="2mm"
            android:layout_marginTop="7mm"
            app:srcCompat="@drawable/user" />

        <EditText
            android:id="@+id/add_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10mm"
            android:layout_marginTop="5mm"
            android:ems="13"
            android:fontFamily="sans-serif-light"
            android:hint="Customer Name"
            android:inputType="text"
            android:textColor="#000000"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="7mm"
            android:layout_marginLeft="2mm"
            android:layout_marginTop="13mm"
            app:srcCompat="@drawable/resource_package"></ImageView>

        <EditText
            android:id="@+id/billProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10mm"
            android:layout_marginTop="14mm"
            android:ems="13"
            android:fontFamily="sans-serif-light"
            android:hint="Product Name"
            android:inputType="text"
            android:textColor="#000000"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="7mm"
            android:layout_marginLeft="2mm"
            android:layout_marginTop="21mm"
            app:srcCompat="@drawable/categorization" />

        <EditText
            android:id="@+id/billCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10mm"
            android:layout_marginTop="22mm"
            android:ems="13"
            android:fontFamily="sans-serif-light"
            android:hint="Category"
            android:inputType="text"
            android:textColor="#000000"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="7mm"
            android:layout_marginLeft="2mm"
            android:layout_marginTop="30mm"
            app:srcCompat="@drawable/items" />

        <EditText
            android:id="@+id/billItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10mm"
            android:layout_marginTop="30mm"
            android:ems="13"
            android:fontFamily="sans-serif-light"
            android:hint="Qty"
            android:inputType="number"
            android:textColor="#000000"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="7mm"
            android:layout_marginLeft="2mm"
            android:layout_marginTop="37mm"
            app:srcCompat="@drawable/telephone_call"/>


        <EditText
            android:id="@+id/customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10mm"
            android:layout_marginTop="37mm"
            android:ems="13"
            android:fontFamily="sans-serif-light"
            android:hint="Number"
            android:inputType="number"
            android:textColor="#000000"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="7mm"
            android:layout_marginLeft="2mm"
            android:layout_marginTop="45mm"
            app:srcCompat="@drawable/price_tag__1_"/>

        <EditText
            android:id="@+id/per_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10mm"
            android:layout_marginTop="45mm"
            android:ems="13"
            android:fontFamily="sans-serif-light"
            android:hint="Amount per item"
            android:inputType="number"
            android:textColor="#000000"
            android:textStyle="italic" />

        <Button
            android:id="@+id/item_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55mm"
            android:layout_marginLeft="5mm"
            android:text="Add Item"
            android:textColor="#FFFFFF"
            app:backgroundTint="#B6B67B" />

        <Button
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23mm"
            android:layout_marginTop="55mm"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            app:backgroundTint="#A57B89"/>

        <Button
            android:id="@+id/billView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40mm"
            android:layout_marginTop="55mm"
            android:text="Bill"
            android:textColor="#FFFFFF"
            app:backgroundTint="#605D5D" />

    </FrameLayout>
</RelativeLayout>
